<table class="table table-hover table-responsive">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <% p friend %>
    <tr>
      <th scope="row">
        <%= "#{friend.first_name}  #{friend.last_name}" %>
      </th>
      <td><%= friend.email %></td>
      <td><%= link_to "Stop following", friendship_path(friend), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %></td>
    </tr>
  <% end %>

  </tbody>
</table>