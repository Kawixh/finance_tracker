<h1>Friends</h1>

<div class="search-area">
  <h3>Search friends</h3>

  <%= form_tag friends_search_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "search friend", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do%>
          &#128269; Search <% "Search" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!--  <# = render 'users/result' %>-->

  <br>

</div>

<div id="results"></div>


<% if !@friends.empty? %>
  <% render 'friends/list' %>
<% end %>